#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run linting
echo "Running linter..."
npm run biome:lint
if [ $? -ne 0 ]; then
  echo "Linter failed. Please fix the issues before committing."
  exit 1
fi

# Run formatting check
echo "Checking code formatting..."
npm run biome:check
if [ $? -ne 0 ]; then
  echo "Code formatting issues detected. Please run 'npm run biome:format' to fix them."
  exit 1
fi

# Run tests
echo "Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "Tests failed. Please fix the issues before committing."
  exit 1
fi

echo "All pre-commit checks passed!"