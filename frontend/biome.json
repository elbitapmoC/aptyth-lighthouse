{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useShorthandArrayType": "error"
      },
      "a11y": {
        "useAltText": "error",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error"
      },
      "complexity": {
        "useLiteralKeys": "error"
      },
      "performance": {
        "noDelete": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
    "ignore": [
      "node_modules",
      ".next",
      "out",
      "build",
      "dist",
      "public",
      "coverage"
    ]
  }
}
