# Example environment variables for the Lighthouse Bible Platform frontend

# Base URL for the API backend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Google Analytics tracking ID (if applicable)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Feature flags (optional)
NEXT_PUBLIC_FEATURE_FLAG_EXAMPLE=true

# Localization settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,es,fr

# PWA settings
NEXT_PUBLIC_APP_NAME=Lighthouse Bible Platform
NEXT_PUBLIC_APP_DESCRIPTION=A platform for Bible study and exploration.
NEXT_PUBLIC_APP_THEME_COLOR=#1a73e8
NEXT_PUBLIC_APP_BACKGROUND_COLOR=#ffffff
NEXT_PUBLIC_APP_DISPLAY=standalone
NEXT_PUBLIC_APP_SCOPE=/
NEXT_PUBLIC_APP_START_URL=/

# Debugging settings
NEXT_PUBLIC_DEBUG_MODE=false
