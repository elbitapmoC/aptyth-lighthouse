# Example environment variables for the Lighthouse Bible Platform

# Database connection string (replace with your actual connection string in the .env file)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Application environment (e.g., development, production)
NODE_ENV=development

# Port the application will run on
PORT=3000

# API keys or secrets (replace with actual values in the .env file)
# Example: API_KEY=your_api_key_here

# Default theme for the application
DEFAULT_THEME=light

# JWT secret key for authentication (replace with your actual secret in the .env file)
JWT_SECRET=your_jwt_secret_here

# Base URL for the application
BASE_URL=http://localhost:3000

# Optional: Enable debug mode (true/false)
DEBUG=false