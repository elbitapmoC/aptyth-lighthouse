{
	"compilerOptions": {
		"target": "esnext", // Target modern JavaScript (ESNext)
		"module": "esnext", // Use ES modules
		"lib": ["deno.window", "dom", "dom.iterable", "esnext"], // Include necessary libraries
		"strict": true, // Enable strict type checking
		"esModuleInterop": true, // Improve compatibility with CommonJS modules (from npm)
		"allowJs": true, // Allow JavaScript files
		"checkJs": true, // Type-check JavaScript files
		"resolveJsonModule": true, // Allow importing JSON files
		"moduleResolution": "node", // Important for npm package compatibility
		"allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
		"useDefineForClassFields": false, // Avoid a common source of bugs.  Important for class properties.
		"skipLibCheck": true, // Skip type checking of declaration files (speeds up compilation)
		"jsx": "react-jsx", // Enable JSX support (if you plan to use Hono's JSX features)
		"jsxImportSource": "hono/jsx" // Configure the JSX factory (for Hono)
	},
	"include": [
		"./**/*.ts", // Include all TypeScript files in the backend directory
		"./**/*.tsx", // Include all TSX files (if you're using JSX)
		"./**/*.js" // Include JS
	],
	"exclude": ["node_modules"]
}
